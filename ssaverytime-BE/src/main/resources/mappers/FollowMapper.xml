<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssaverytime.server.mapper.FollowMapper">

    <!-- 팔로우 추가 -->
    <insert id="insertFollow">
        INSERT INTO FOLLOW (BOJ_ID1, BOJ_ID2)
        VALUES (#{bojId1}, #{bojId2})
    </insert>

    <!-- 팔로우 삭제 -->
    <delete id="deleteFollow">
        DELETE FROM FOLLOW
        WHERE BOJ_ID1 = #{bojId1}
        AND BOJ_ID2 = #{bojId2}
    </delete>

    <!-- 팔로우 관계 확인 -->
    <select id="countFollow" resultType="int">
        SELECT COUNT(*)
        FROM FOLLOW
        WHERE BOJ_ID1 = #{bojId1}
        AND BOJ_ID2 = #{bojId2}
    </select>

</mapper>
